.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 40rpx;
}

.login-tip {
  background: #fff3cd;
  border: 2rpx solid #ffc107;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.login-tip.warning {
  background: #ffe0b2;
  border-color: #ff9800;
}

.login-tip-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.login-tip-content text {
  font-size: 28rpx;
  color: #856404;
}

.login-options {
  display: flex;
  gap: 16rpx;
}

.login-btn-small {
  flex: 1;
  height: 56rpx;
  background: #ffc107;
  color: #856404;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
}

.token-btn-small {
  flex: 1;
  height: 56rpx;
  background: #667eea;
  color: #fff;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
}

.token-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.token-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #fafafa;
  margin-bottom: 16rpx;
}

.token-input:focus {
  border-color: #667eea;
  background: #fff;
}

.token-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.save-token-btn {
  width: 100%;
  height: 72rpx;
  background: #4caf50;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
}

.token-hint {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.input-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.input-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.prompt-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #fafafa;
  box-sizing: border-box;
}

.prompt-input:focus {
  border-color: #667eea;
  background: #fff;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.seed-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #fafafa;
}

.seed-input:focus {
  border-color: #667eea;
  background: #fff;
}

.action-section {
  margin-bottom: 32rpx;
}

.generate-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.generate-btn.loading {
  opacity: 0.7;
}

.generate-btn[disabled] {
  opacity: 0.5;
  background: #ccc;
}

.token-section {
  margin-top: 24rpx;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.token-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-bottom: 16rpx;
  background: #fff;
}

.save-token-btn {
  width: 100%;
  height: 64rpx;
  background: #4caf50;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
}

.token-toggle {
  text-align: center;
  color: #667eea;
  font-size: 26rpx;
  margin-top: 16rpx;
  padding: 16rpx;
}

.result-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.result-image {
  width: 100%;
  min-height: 400rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
  margin-bottom: 24rpx;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  background: #667eea;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
}

.error-message {
  background: #ffebee;
  color: #c62828;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-bottom: 32rpx;
  border-left: 4rpx solid #c62828;
}

.history-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.history-list {
  max-height: 600rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
  gap: 20rpx;
}

.history-item:last-child {
  border-bottom: none;
}

.history-prompt {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

