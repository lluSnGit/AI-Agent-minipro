/* openclaw AI总裁页面样式 */
page {
  height: 100vh;
  background: #ffffff;
}

.page {
  height: 100vh;
}

/* Hero Section */
.hero-section {
  position: relative;
  padding: 60rpx 32rpx 80rpx;
  overflow: hidden;
}

.bg-grid-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(#e0f2fe 2rpx, transparent 2rpx);
  background-size: 48rpx 48rpx;
  opacity: 0.6;
  z-index: 0;
}

.hero-bg-ball-1 {
  position: absolute;
  top: 40rpx;
  right: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: #e0f2fe;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.5;
  z-index: 0;
}

.hero-bg-ball-2 {
  position: absolute;
  bottom: 0;
  left: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: #e0e7ff;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.5;
  z-index: 0;
}

.hero-content {
  position: relative;
  z-index: 1;
  text-align: center;
}

.hero-badge {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 24rpx;
  background: #f0f9ff;
  border: 2rpx solid #bae6fd;
  border-radius: 40rpx;
  margin-bottom: 32rpx;
}

.badge-dot {
  width: 12rpx;
  height: 12rpx;
  background: #0ea5e9;
  border-radius: 50%;
}

.badge-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #0369a1;
}

.hero-title {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
}

.title-main {
  font-size: 72rpx;
  font-weight: 800;
  color: #0f172a;
  letter-spacing: -2rpx;
}

.title-gradient {
  font-size: 48rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #0284c7 0%, #6366f1 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-desc {
  display: block;
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

.hero-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 0 40rpx;
}

.btn-primary {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 48rpx;
  background: linear-gradient(135deg, #0284c7 0%, #6366f1 100%);
  border-radius: 50rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 24rpx rgba(14, 165, 233, 0.3);
}

.btn-arrow {
  font-size: 28rpx;
}

.btn-secondary {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 48rpx;
  background: #fff;
  border: 2rpx solid #e2e8f0;
  border-radius: 50rpx;
  color: #475569;
  font-size: 30rpx;
  font-weight: 600;
}

.play-icon {
  color: #0ea5e9;
  font-size: 24rpx;
}

/* Hero Visual */
.hero-visual {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.visual-card {
  background: transparent;
  border: none;
  border-radius: 32rpx;
  padding: 0;
  box-shadow: none;
  overflow: hidden;
}

.hero-image {
  width: 100%;
  height: 500rpx;
  background-size: contain;
  background-position: center;
  background-repeat: no-repeat;
  border-radius: 24rpx;
}


.visual-inner {
  position: relative;
  background: #f8fafc;
  border-radius: 24rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.central-hub {
  width: 160rpx;
  height: 160rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #f1f5f9;
}

.hub-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.hub-text {
  font-size: 18rpx;
  font-weight: 700;
  color: #94a3b8;
}

/* Tree Lines */
.tree-lines {
  width: 2rpx;
  height: 30rpx;
  background: #cbd5e1;
}

/* Node Rows */
.node-row {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  width: 100%;
}

.node-row-1 {
  justify-content: space-around;
}

.node-row-2 {
  justify-content: space-between;
  padding: 0 10rpx;
}

.node {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  padding: 16rpx 12rpx;
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  max-width: 180rpx;
  flex: 1;
}

.node-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.node-icon-blue { background: #dbeafe; }
.node-icon-indigo { background: #e0e7ff; }
.node-icon-pink { background: #fce7f3; }
.node-icon-teal { background: #ccfbf1; }
.node-icon-orange { background: #ffedd5; }

.node-info {
  display: flex;
  flex-direction: column;
}

.node-title {
  font-size: 20rpx;
  font-weight: 700;
  color: #334155;
  text-align: center;
  line-height: 1.3;
}

.node-desc {
  font-size: 18rpx;
  color: #94a3b8;
}

/* Scenarios Section */
.scenarios-section {
  padding: 60rpx 32rpx;
  background: #f8fafc;
}

.section-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.section-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 16rpx;
}

.section-desc {
  display: block;
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
}

.scenarios-grid {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.scenario-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 40rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx -20rpx rgba(0, 0, 0, 0.05);
}

.scenario-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.scenario-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.icon-blue { background: #dbeafe; }
.icon-indigo { background: #e0e7ff; }
.icon-pink { background: #fce7f3; }
.icon-teal { background: #ccfbf1; }

.scenario-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.tag-blue { background: #dbeafe; color: #1d4ed8; }
.tag-indigo { background: #e0e7ff; color: #4338ca; }
.tag-pink { background: #fce7f3; color: #be185d; }
.tag-teal { background: #ccfbf1; color: #0f766e; }

.scenario-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 12rpx;
}

.scenario-desc {
  display: block;
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.scenario-skills {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  border: 2rpx solid #f1f5f9;
  margin-bottom: 24rpx;
}

.skills-label {
  display: block;
  font-size: 20rpx;
  font-weight: 700;
  color: #94a3b8;
  text-transform: uppercase;
  margin-bottom: 16rpx;
}

.skills-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.skill-item {
  padding: 8rpx 16rpx;
  background: #f1f5f9;
  color: #475569;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.scenario-example {
  display: flex;
  gap: 16rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  border: 2rpx solid;
}

.example-blue { background: rgba(219, 234, 254, 0.5); border-color: #bfdbfe; }
.example-indigo { background: rgba(224, 231, 255, 0.5); border-color: #c7d2fe; }
.example-pink { background: rgba(252, 231, 243, 0.5); border-color: #fbcfe8; }
.example-teal { background: rgba(204, 251, 241, 0.5); border-color: #99f6e4; }

.example-icon {
  font-size: 28rpx;
  margin-top: 4rpx;
}

.example-content {
  flex: 1;
}

.example-title {
  display: block;
  font-size: 24rpx;
  font-weight: 700;
  color: #334155;
  margin-bottom: 8rpx;
}

.example-desc {
  display: block;
  font-size: 24rpx;
  color: #475569;
  line-height: 1.6;
}

/* Logic Section */
.logic-section {
  padding: 60rpx 32rpx;
}

.logic-left {
  margin-bottom: 48rpx;
}

.logic-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #0f172a;
}

.logic-title-gradient {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #0284c7 0%, #6366f1 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 24rpx;
}

.logic-desc {
  display: block;
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.logic-steps {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.step-item {
  display: flex;
  gap: 20rpx;
}

.step-num {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #e0f2fe;
  color: #0284c7;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.step-desc {
  display: block;
  font-size: 26rpx;
  color: #64748b;
  margin-top: 4rpx;
}

.logic-right {
  width: 100%;
}

.value-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 40rpx;
  padding: 40rpx;
  box-shadow: 0 32rpx 80rpx -20rpx rgba(0, 0, 0, 0.1);
}

.value-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 32rpx;
}

.value-icon {
  font-size: 32rpx;
}

.value-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #334155;
}

.value-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.value-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  border: 2rpx solid #f1f5f9;
}

.value-item-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  flex-shrink: 0;
}

.icon-green { background: #dcfce7; }
.icon-purple { background: #f3e8ff; }
.icon-orange { background: #ffedd5; }

.value-item-content {
  flex: 1;
}

.value-item-title {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
}

.value-item-desc {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  margin-top: 4rpx;
}

/* Company Section */
.company-section {
  position: relative;
  padding: 60rpx 32rpx;
  background: #f8fafc;
  color: #0f172a;
  overflow: hidden;
}

.company-bg-ball-1 {
  position: absolute;
  bottom: -100rpx;
  left: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: #e0f2fe;
  border-radius: 50%;
  filter: blur(150rpx);
  opacity: 0.5;
}

.company-bg-ball-2 {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: #e0e7ff;
  border-radius: 50%;
  filter: blur(150rpx);
  opacity: 0.5;
}

.company-content {
  position: relative;
  z-index: 1;
}

.company-left {
  margin-bottom: 48rpx;
}

.company-logo {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.company-logo-icon {
  width: 60rpx;
  height: 60rpx;
  background: #e0f2fe;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.company-logo-text {
  display: flex;
  flex-direction: column;
}

.company-name {
  font-size: 36rpx;
  font-weight: 700;
}

.company-name-en {
  font-size: 22rpx;
  color: #64748b;
}

.company-desc {
  display: block;
  font-size: 28rpx;
  color: #475569;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

.company-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.company-tag {
  padding: 12rpx 20rpx;
  background: #e0f2fe;
  border: 2rpx solid #bae6fd;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #0369a1;
}

.contact-card {
  background: #fff;
  backdrop-filter: blur(20rpx);
  border: 2rpx solid #e2e8f0;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx -20rpx rgba(0, 0, 0, 0.05);
}

.contact-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 32rpx;
}

.contact-form {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-input {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  line-height: 96rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  color: #0f172a;
  font-size: 28rpx;
  box-sizing: border-box;
}

.contact-input::placeholder {
  color: #94a3b8;
}

.contact-textarea {
  width: 100%;
  height: 160rpx;
  padding: 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  color: #0f172a;
  font-size: 28rpx;
  box-sizing: border-box;
}

.contact-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%);
  border-radius: 16rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
  box-sizing: border-box;
}

/* Footer */
.page-footer {
  padding: 40rpx 32rpx;
  background: #f1f5f9;
  border-top: 2rpx solid #e2e8f0;
}

.footer-text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #64748b;
}

/* 开始体验按钮 */
.start-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%);
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(14, 165, 233, 0.3);
  z-index: 100;
}

.start-button-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
}

/* 聊天界面弹窗 */
.chat-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, visibility 0.3s;
}

.chat-modal.show {
  opacity: 1;
  visibility: visible;
}

.chat-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.chat-modal.show .chat-container {
  transform: translateY(0);
}

/* 聊天头部 */
.chat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.chat-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
}

.chat-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.close-icon {
  font-size: 32rpx;
  color: #fff;
  font-weight: 300;
}

/* 聊天消息列表 */
.chat-messages {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
  background: #f8fafc;
}

.chat-empty {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #64748b;
  text-align: center;
  line-height: 1.6;
}

.chat-message {
  display: flex;
  margin-bottom: 32rpx;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message-user {
  flex-direction: row-reverse;
}

.message-ai {
  flex-direction: row;
}

.message-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin: 0 16rpx;
}

.message-user .message-avatar {
  background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%);
}

.message-ai .message-avatar {
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
}

.avatar-text {
  font-size: 32rpx;
}

.message-content {
  max-width: 70%;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  word-wrap: break-word;
  word-break: break-all;
}

.message-user .message-content {
  background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%);
  border-bottom-right-radius: 4rpx;
}

.message-ai .message-content {
  background: #fff;
  border: 2rpx solid #e2e8f0;
  border-bottom-left-radius: 4rpx;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #0f172a;
}

.message-user .message-text {
  color: #fff;
}

/* 输入区域 */
.chat-input-area {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fff;
  border-top: 2rpx solid #e2e8f0;
  gap: 16rpx;
}

.chat-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #0f172a;
  box-sizing: border-box;
}

.chat-input::placeholder {
  color: #94a3b8;
}

.chat-send-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(14, 165, 233, 0.3);
}

.chat-send-btn.disabled {
  opacity: 0.5;
  box-shadow: none;
}

.send-icon {
  font-size: 32rpx;
  color: #fff;
  font-weight: 700;
}
