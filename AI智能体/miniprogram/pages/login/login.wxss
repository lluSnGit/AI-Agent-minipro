.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-box {
  width: 100%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
  margin-bottom: 60rpx;
}

.tab-bar {
  display: flex;
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 32rpx;
  color: #999;
  position: relative;
  transition: color 0.3s;
}

.tab-item.active {
  color: #667eea;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx 2rpx 0 0;
}

.form-section {
  margin-top: 20rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #fafafa;
  transition: all 0.3s;
}

.input:focus {
  border-color: #667eea;
  background: #fff;
}

.code-input-wrapper {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.code-input {
  flex: 1;
}

.send-code-btn {
  width: 200rpx;
  height: 88rpx;
  background: #667eea;
  color: #fff;
  font-size: 26rpx;
  border-radius: 12rpx;
  border: none;
  white-space: nowrap;
  flex-shrink: 0;
}

.send-code-btn.disabled {
  background: #ccc;
  color: #999;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.login-btn.loading {
  opacity: 0.7;
}

.login-btn[disabled] {
  opacity: 0.5;
  background: #ccc;
}

.error-message {
  margin-top: 24rpx;
  padding: 20rpx;
  background: #ffebee;
  color: #c62828;
  border-radius: 8rpx;
  font-size: 26rpx;
  border-left: 4rpx solid #c62828;
}

.success-message {
  margin-top: 24rpx;
  padding: 20rpx;
  background: #e8f5e9;
  color: #2e7d32;
  border-radius: 8rpx;
  font-size: 26rpx;
  border-left: 4rpx solid #2e7d32;
}


