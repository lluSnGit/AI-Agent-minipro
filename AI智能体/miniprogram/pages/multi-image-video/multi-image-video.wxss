.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 40rpx;
}

.login-tip {
  background: #fff3cd;
  border: 2rpx solid #ffc107;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.login-tip.warning {
  background: #ffe0b2;
  border-color: #ff9800;
}

.login-tip-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.login-tip-content text {
  font-size: 28rpx;
  color: #856404;
}

.login-options {
  display: flex;
  gap: 16rpx;
}

.login-btn-small {
  flex: 1;
  height: 56rpx;
  background: #ffc107;
  color: #856404;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
}

.token-btn-small {
  flex: 1;
  height: 56rpx;
  background: #667eea;
  color: #fff;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
}

.token-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.token-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #fafafa;
  margin-bottom: 16rpx;
}

.token-input:focus {
  border-color: #667eea;
  background: #fff;
}

.token-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.save-token-btn {
  width: 100%;
  height: 72rpx;
  background: #4caf50;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
}

.token-hint {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.input-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.input-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.image-item {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f0f0f0;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.image-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.image-number {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.image-upload-box {
  width: 100%;
  aspect-ratio: 1;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: #fafafa;
}

.upload-icon {
  font-size: 60rpx;
  color: #999;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.image-hint {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.prompt-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #fafafa;
  box-sizing: border-box;
}

.prompt-input:focus {
  border-color: #667eea;
  background: #fff;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.seed-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #fafafa;
}

.seed-input:focus {
  border-color: #667eea;
  background: #fff;
}

.duration-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.action-section {
  margin-bottom: 32rpx;
}

.generate-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.generate-btn.loading {
  opacity: 0.7;
}

.generate-btn[disabled] {
  opacity: 0.5;
  background: #ccc;
}

.cost-info {
  background: #e3f2fd;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  font-size: 28rpx;
  color: #1976d2;
  text-align: center;
}

.result-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.video-item {
  margin-bottom: 40rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.video-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.video-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.video-filename {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.video-node {
  font-size: 24rpx;
  color: #999;
}

.result-video {
  width: 100%;
  min-height: 400rpx;
  border-radius: 12rpx;
  background: #000;
  margin-bottom: 24rpx;
}

.image-item {
  margin-bottom: 40rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.image-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.image-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.image-filename {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.image-node {
  font-size: 24rpx;
  color: #999;
}

.result-image {
  width: 100%;
  min-height: 400rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
  margin-bottom: 24rpx;
}

.result-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  background: #667eea;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
}

.error-message {
  background: #ffebee;
  color: #c62828;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-bottom: 32rpx;
  border-left: 4rpx solid #c62828;
}


