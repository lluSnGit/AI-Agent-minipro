.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 40rpx;
}

.login-tip {
  background: #fff3cd;
  border: 2rpx solid #ffc107;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.login-tip-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.login-tip-content text {
  font-size: 28rpx;
  color: #856404;
}

.login-options {
  display: flex;
  gap: 16rpx;
}

.login-btn-small {
  flex: 1;
  height: 56rpx;
  background: #ffc107;
  color: #856404;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
}

.token-btn-small {
  flex: 1;
  height: 56rpx;
  background: #667eea;
  color: #fff;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
}

.token-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.token-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #fafafa;
  margin-bottom: 16rpx;
}

.token-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.save-token-btn {
  width: 100%;
  height: 72rpx;
  background: #4caf50;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
}

.token-hint {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.image-upload-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.image-item {
  margin-bottom: 32rpx;
}

.image-item:last-child {
  margin-bottom: 0;
}

.image-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.image-upload-box {
  width: 100%;
  height: 300rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  position: relative;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.upload-icon {
  font-size: 64rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #999;
}

.remove-btn {
  width: 100%;
  height: 64rpx;
  background: #ff5722;
  color: #fff;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
  margin-top: 16rpx;
}

.input-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.input-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.prompt-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #fafafa;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.seed-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #fafafa;
}

.checkbox-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.checkbox-label {
  font-size: 28rpx;
  color: #333;
}

.action-section {
  margin-bottom: 32rpx;
}

.generate-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.generate-btn.loading {
  opacity: 0.7;
}

.generate-btn[disabled] {
  opacity: 0.5;
  background: #ccc;
}

.result-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.result-image {
  width: 100%;
  min-height: 400rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
  margin-bottom: 24rpx;
}

.result-video {
  width: 100%;
  min-height: 400rpx;
  border-radius: 12rpx;
  background: #000;
  margin-bottom: 24rpx;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  background: #667eea;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
}

.error-message {
  background: #ffebee;
  color: #c62828;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-bottom: 32rpx;
  border-left: 4rpx solid #c62828;
}


