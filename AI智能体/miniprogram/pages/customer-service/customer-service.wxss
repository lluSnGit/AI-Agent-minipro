/* 容器 */
.container {
  min-height: 100vh;
  background: #ffffff;
  color: #1e293b;
  padding-bottom: 40rpx;
}

/* 开始体验按钮（customer-service 原先缺失样式） */
.start-button-container {
  padding: 8rpx 40rpx 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.start-button {
  width: 100%;
  height: 96rpx;
  border-radius: 28rpx;
  background: linear-gradient(135deg, #0284c7 0%, #6366f1 55%, #ec4899 100%);
  box-shadow: 0 14rpx 40rpx rgba(2, 132, 199, 0.22);
  display: flex;
  align-items: center;
  justify-content: center;
}

.start-button:active {
  transform: scale(0.985);
  box-shadow: 0 10rpx 28rpx rgba(2, 132, 199, 0.18);
}

.start-button-text {
  font-size: 30rpx;
  font-weight: 800;
  color: #ffffff;
  letter-spacing: 1rpx;
}

/* 背景光晕 */
.bg-blob {
  position: absolute;
  filter: blur(160rpx);
  z-index: 0;
  opacity: 0.5;
  border-radius: 50%;
}
.blob-1 {
  width: 288rpx;
  height: 288rpx;
  background: #e0f2fe;
  top: 0;
  right: 0;
  transform: translate(50%, -50%);
}
.blob-2 {
  width: 288rpx;
  height: 288rpx;
  background: #eff6ff;
  bottom: 0;
  left: 0;
  transform: translate(-50%, 50%);
}

/* Hero Section */
.hero-section {
  position: relative;
  padding: 112rpx 40rpx 48rpx;
  overflow: hidden;
}
.hero-content {
  position: relative;
  z-index: 10;
  text-align: center;
}

/* Badge */
.badge {
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
  padding: 12rpx 24rpx;
  border-radius: 100rpx;
  background: #f0f9ff;
  border: 2rpx solid #e0f2fe;
  margin-bottom: 48rpx;
}
.badge-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #0284c7;
  animation: pulse 2s infinite;
}
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}
.badge-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #075985;
}

/* Hero Title */
.hero-title {
  display: flex;
  flex-direction: column;
  margin-bottom: 32rpx;
}
.title-main {
  font-size: 64rpx;
  font-weight: 800;
  color: #0f172a;
  line-height: 1.2;
  margin-bottom: 16rpx;
}
.title-gradient {
  font-size: 48rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #0284c7 0%, #075985 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
.hero-desc {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 64rpx;
}

/* CTA Button */
.cta-btn {
  width: 100%;
  max-width: 560rpx;
  margin: 0 auto;
  padding: 28rpx 0;
  border-radius: 24rpx;
  background: linear-gradient(to right, #0284c7, #075985);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 24rpx rgba(14, 165, 233, 0.3);
  border: none;
}
.cta-btn:active {
  transform: scale(0.95);
}

/* Features Section */
.features-section {
  padding: 32rpx 40rpx;
}
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
}
.section-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #0f172a;
}
.section-badge {
  font-size: 24rpx;
  font-weight: 500;
  color: #0284c7;
  background: #f0f9ff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

/* Feature Cards */
.features-grid {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}
.feature-card {
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 40rpx -4rpx rgba(0, 0, 0, 0.03);
}
.feature-content {
  display: flex;
  gap: 32rpx;
}
.feature-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  flex-shrink: 0;
}
.icon-blue { background: #eff6ff; }
.icon-indigo { background: #eef2ff; }
.icon-cyan { background: #ecfeff; }
.icon-emerald { background: #ecfdf5; }

.feature-info {
  flex: 1;
}
.feature-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}
.feature-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #0f172a;
}
.feature-tag {
  font-size: 18rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  padding: 6rpx 16rpx;
  border-radius: 100rpx;
}
.tag-blue { color: #0ea5e9; background: #eff6ff; }
.tag-indigo { color: #6366f1; background: #eef2ff; }
.tag-cyan { color: #06b6d4; background: #ecfeff; }
.tag-emerald { color: #10b981; background: #ecfdf5; }

.feature-subtitle {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 24rpx;
}
.feature-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.feature-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
  color: #475569;
}
.check-icon {
  font-size: 20rpx;
  color: #0ea5e9;
}
.check-indigo { color: #6366f1; }
.check-cyan { color: #06b6d4; }
.check-emerald { color: #10b981; }

.feature-solution {
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 2rpx solid #f1f5f9;
}
.feature-solution text {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.6;
}
.solution-label {
  font-weight: 700;
  color: #334155 !important;
}

/* Why Section */
.why-section {
  padding: 80rpx 40rpx;
  background: #f8fafc;
  border-radius: 80rpx 80rpx 0 0;
  margin-top: 32rpx;
}
.why-header {
  text-align: center;
  margin-bottom: 64rpx;
}
.why-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 16rpx;
}
.why-subtitle {
  font-size: 28rpx;
  color: #64748b;
}
.why-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}
.why-card {
  background: #ffffff;
  padding: 32rpx;
  border-radius: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid #f1f5f9;
}
.why-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 16rpx;
  background: #f0f9ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}
.why-card-title {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
}
.why-card-desc {
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 8rpx;
}

/* Summary Card */
.summary-card {
  margin-top: 64rpx;
  background: linear-gradient(135deg, #0284c7 0%, #075985 100%);
  border-radius: 32rpx;
  padding: 48rpx;
  color: #ffffff;
  box-shadow: 0 16rpx 48rpx rgba(14, 165, 233, 0.2);
}
.summary-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 32rpx;
}
.summary-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.summary-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
}
.summary-icon {
  font-size: 32rpx;
  opacity: 0.8;
}
.summary-item text:last-child {
  font-size: 28rpx;
  font-weight: 500;
}

/* CTA Section */
.cta-section {
  padding: 96rpx 40rpx;
  text-align: center;
}
.cta-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 32rpx;
}
.cta-desc {
  display: block;
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 48rpx;
}
.cta-btn-dark {
  width: 100%;
  max-width: 560rpx;
  margin: 0 auto;
  padding: 32rpx 0;
  border-radius: 24rpx;
  background: #0f172a;
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border: none;
}
.cta-btn-dark:active {
  background: #1e293b;
}

/* Footer */
.footer {
  text-align: center;
  padding: 48rpx 40rpx;
  background: #ffffff;
  border-top: 2rpx solid #f8fafc;
}
.footer-brand {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}
.footer-logo {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  background: transparent;
  display: block;
}
.footer-name {
  font-size: 24rpx;
  font-weight: 700;
  color: #334155;
}
.footer-cert {
  display: block;
  font-size: 20rpx;
  color: #94a3b8;
}
.footer-copyright {
  display: block;
  font-size: 20rpx;
  color: #cbd5e1;
  margin-top: 8rpx;
}

/* =========================
 * 聊天弹窗（补齐 customer-service 缺失的聊天样式）
 * 适配 iPhone 底部安全区
 * ========================= */

.chat-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.55);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.25s ease, visibility 0.25s ease;
}

.chat-modal.show {
  opacity: 1;
  visibility: visible;
}

.chat-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.25s ease;
}

.chat-modal.show .chat-container {
  transform: translateY(0);
}

/* 直接聊天模式：全屏显示，无遮罩 */
.chat-modal.direct-chat {
  background: transparent;
}

.chat-modal.direct-chat.show {
  opacity: 1;
  visibility: visible;
}

.chat-modal.direct-chat .chat-container {
  transform: translateY(0);
  transition: none;
}

/* 聊天头部 */
.chat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
}

.chat-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff;
}

.chat-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.22);
  border-radius: 50%;
}

.close-icon {
  font-size: 32rpx;
  color: #fff;
  font-weight: 300;
}

/* 聊天消息列表 */
.chat-messages {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
  background: #f8fafc;
}

.chat-empty {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #64748b;
  text-align: center;
  line-height: 1.6;
}

.login-gate {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.login-cta {
  height: 88rpx;
  min-width: 260rpx;
  padding: 0 40rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #0284c7 0%, #6366f1 60%, #ec4899 100%);
  box-shadow: 0 14rpx 36rpx rgba(2, 132, 199, 0.22);
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-cta:active {
  transform: scale(0.985);
}

.login-cta-text {
  font-size: 30rpx;
  font-weight: 800;
  color: #fff;
  letter-spacing: 1rpx;
}

.chat-message {
  display: flex;
  margin-bottom: 32rpx;
  animation: fadeIn 0.25s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(16rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message-user {
  flex-direction: row-reverse;
}

.message-ai {
  flex-direction: row;
}

.message-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin: 0 16rpx;
}

.message-user .message-avatar {
  background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%);
}

.message-ai .message-avatar {
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
}

.avatar-text {
  font-size: 32rpx;
}

.message-content {
  max-width: 70%;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  word-wrap: break-word;
  word-break: break-word;
}

.message-user .message-content {
  background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%);
  border-bottom-right-radius: 6rpx;
}

.message-ai .message-content {
  background: #fff;
  border: 2rpx solid #e2e8f0;
  border-bottom-left-radius: 6rpx;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #0f172a;
}

.message-user .message-text {
  color: #fff;
}

/* 输入区域（重点：底部安全区） */
.chat-input-area {
  display: flex;
  align-items: center;
  padding: 22rpx 32rpx;
  padding-bottom: calc(22rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-top: 2rpx solid #e2e8f0;
  gap: 16rpx;
  box-sizing: border-box;
}

.chat-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #0f172a;
  box-sizing: border-box;
}

.chat-input::placeholder {
  color: #94a3b8;
}

.chat-send-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #0ea5e9 0%, #6366f1 100%);
  border-radius: 50%;
  box-shadow: 0 4rpx 14rpx rgba(14, 165, 233, 0.28);
}

.chat-send-btn.disabled {
  opacity: 0.5;
  box-shadow: none;
}

.send-icon {
  font-size: 32rpx;
  color: #fff;
  font-weight: 700;
}