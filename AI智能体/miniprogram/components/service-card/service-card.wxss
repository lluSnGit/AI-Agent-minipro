.card {
  background: #fff;
  border-radius: var(--card-radius);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.card-image {
  width: 100%;
  height: 220rpx;
  background-size: cover;
  background-position: top center;
}

.card-content {
  padding: var(--card-padding);
}

.card-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.card-desc {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}
