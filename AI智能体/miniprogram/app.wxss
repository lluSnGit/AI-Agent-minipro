/**app.wxss**/
page {
  --primary-color: #2563eb;
  --bg-color: #ffffff;
  --text-color: #1f2937;
  --text-secondary: #6b7280;
  --border-color: #e5e7eb;
  --card-radius: 16rpx;
  --card-padding: 24rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background-color: var(--bg-color);
  color: var(--text-color);
}

.container {
  padding: 24rpx;
  box-sizing: border-box;
}
